<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Boekuwzending Client -->
    <preference for="Boekuwzending\Magento\Service\IBoekuwzendingClient" type="Boekuwzending\Magento\Service\BoekuwzendingClient" />
    
    <!-- API classes -->
    <preference for="Boekuwzending\Magento\Api\OrderServiceInterface" type="Boekuwzending\Magento\Model\OrderSerivce" />

    <!-- Order entity -->
    <preference for="Boekuwzending\Magento\Api\Data\OrderInterface" type="Boekuwzending\Magento\Model\Order" />
    <preference for="Boekuwzending\Magento\Api\OrderRepositoryInterface" type="Boekuwzending\Magento\Model\OrderRepository" />

    <!-- Order plugin to read custom field -->
    <type name="Magento\Sales\Api\OrderRepositoryInterface">
        <plugin name="boekuwzending_order_order_id" type="Boekuwzending\Magento\Plugin\OrderRepositoryPlugin" />
    </type>
</config>